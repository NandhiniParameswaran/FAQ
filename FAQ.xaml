<Window x:Class="t.FAQ"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:t"
        mc:Ignorable="d"
        Title="FAQ" Height="200" Width="500" Background="Gold">
    <StackPanel>
        <Label x:Name="lblfaq" Content="FAQ" HorizontalAlignment="Center"></Label>
        <StackPanel Orientation="Horizontal" >
            <Label x:Name="lblname" Content="Name" Background="Violet" Foreground="Black" Width="50" Height="30" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
            <TextBox x:Name="txtname" Width="60" Height="30" VerticalAlignment="Top"></TextBox>
        </StackPanel>
        <Button x:Name="btnlogin" Content="Login" Click="btnlogin_Click" Background="Chocolate" Width="50" Height="30" Margin="5" BorderBrush="Black" BorderThickness="3"></Button>
        
    </StackPanel>
    

</Window>
